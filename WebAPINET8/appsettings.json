{
  "Logging": {
    "LogLevel": {
      "Default": "Information", // Nivel mínimo de log: Information
      "Microsoft.AspNetCore": "Warning" // Logs de ASP.NET solo desde Warning
    }
  },
  "AllowedHosts": "*", // Permite acceso desde cualquier origen
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=.;Initial Catalog=PruebaDB;Integrated Security=True;Trust Server Certificate=True"
    // Data Source=.          : Servidor local (misma máquina)
    // Initial Catalog=PruebaDB : Nombre de la base de datos
    // Integrated Security=True : Usa autenticación de Windows
    // Trust Server Certificate=True : Acepta certificados SSL (solo desarrollo)
  }
}